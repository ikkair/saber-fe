<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:background="@color/transparent_blue_dark"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:padding="20dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/white_rounded_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        style="@style/huge_tittle_text_black"
                        android:text="@string/detail_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <Space android:layout_width="match_parent" android:layout_height="40dp"/>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/profileImage"
                                android:layout_width="200dp"
                                android:layout_height="200dp"/>

                </FrameLayout>

                <TableLayout
                        android:id="@+id/profileTable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

        </LinearLayout>

</FrameLayout>
