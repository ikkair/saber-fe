<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@drawable/white_rounded_bg_border"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
                android:padding="3dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="start|center"
                android:background="@drawable/white_rounded_bg_border"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/trashDetailImageFinal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <include layout="@layout/loading_progressbar"/>

        </FrameLayout>

        <LinearLayout
                android:layout_gravity="center|end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                        android:gravity="start"
                        android:layout_gravity="start|center"
                        android:id="@+id/trashTextSingle"
                        android:textSize="12sp"
                        android:textColor="@color/calmBlack"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <CheckBox
                        android:visibility="gone"
                        android:id="@+id/trashTextCheck"
                        android:layout_gravity="center|end"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

        </LinearLayout>

</LinearLayout>