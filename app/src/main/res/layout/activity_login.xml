<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    
    <LinearLayout
        android:layout_marginTop="180dp"
        android:background="@drawable/gradient_color_bg_log_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <ImageView
        android:id="@+id/logInPictureDecoration"
        android:layout_gravity="top|center"
        android:layout_width="320dp"
        android:layout_height="320dp"/>

    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/transparent_form_data_bg"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_gravity="top|center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/huge_tittle_text"
                android:layout_gravity="center"
                android:text="@string/head_title_log_in_form_huge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/small_tittle_text"
                android:layout_gravity="center"
                android:text="@string/head_title_log_in_form_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:padding="11dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/transparent_field_form_data_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <EditText
                android:textColor="@color/white"
                android:background="@null"
                android:layout_gravity="center"
                android:inputType="text"
                android:padding="0dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/transparent_field_form_data_bg"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <EditText
                android:layout_gravity="center"
                android:inputType="text"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>