<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/mapsViewPickup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/blue_rounded_bg"
        android:layout_gravity="center|top"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginEnd="20dp"
            android:layout_gravity="center|start"
            android:background="@drawable/baseline_location_on_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/pickupLocationLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/small_title_14sp_white"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/white_rounded_bg_border"
        android:layout_gravity="center|bottom"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/cashOutDetailsWrapper">
            <TextView style="@style/cashOutDetails" android:text="Berat Sampah"/>
            <TextView style="@style/cashOutDetails" android:id="@+id/trashDetailWeight"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>